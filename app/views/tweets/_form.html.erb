<%= simple_form_for(@tweet) do |f| %>
  <% if f.error_notification %>
    <div class="notification is-danger is-light">
      <p><%= f.error_notification %></p>
    </div>
  <% end %>
  <div class="field">
    <div class="control">
      <%= f.input :tweet, label: "Tweet your thought", input_html: { class: "textarea"}, wrapper: false, label_html: {class: "label"}, placeholder: "Compose a new tweet ..." %>
    </div>
    <%= f.button :submit, class: "button is-info is-rounded mt-4" %>
  </div>
<% end %>
