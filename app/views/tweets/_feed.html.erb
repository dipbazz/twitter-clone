<div class="column is-half">
  <article class="media box">
    <figure class="media-left">
      <p class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/64x64.png">
      </p>
    </figure>

    <div class="media-content">

    </div>
  </article>
</div>

<% @tweets.each do |tweet| %>
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-64x64">
          <img src="https://bulma.io/images/placeholders/64x64.png">
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <strong>Dipesh Bajgain</strong><br />
          <small>@dipbazz</small>
          <p><%= tweet.tweet %></p>
        </div>

        <nav class="level">
          <div class="level-item">
            <div>
              <span class="icon"><i class="fas fa-link" aria-hidden="true"></i></span>
            </div>
          </div>
          <div class="level-item">
            <div>
              <%= link_to edit_tweet_path(tweet) do %>
                <span class="icon"><i class="fas fa-pencil-alt"></i></span>
              <% end %>
            </div>
          </div>
          <div class="level-item">
            <div>
              <%= link_to tweet, method: :delete, data: {confirm: "Are you sure you want to delete this tweet?"} do %>
                <span class="icon"><i class="fas fa-trash-alt is-danger" aria-hidden="true"></i></span>
              <% end %>
            </div>
          </div>
        </nav>
      </div>
    </article>
  </div>
<% end %>
